<mujoco model="playground_wagon_manipulation(v1.0.0)">
    
    <!--##############
        ### IMPORT ###
        ############## -->
    <include file="../components/include_common.xml"/>
    <include file="../components/include_summit_wam_bhand_Dependencies.xml"/> 
    <include file="../components/include_summit_wam_bhand_actuators.xml"/>
    <include file="../components/include_nonholonomic_cart_Dependencies.xml"/>  

    <include file="../components/include_shelves_Dependencies.xml"/>
    <include file="../components/include_walls_Dependencies.xml"/>

    <!--##################
        ### Extension: ###
        ################## -->
    <extension>
        <plugin plugin="mujoco.elasticity.solid"/>
    </extension>

    <!--###############
        ### Config: ###
        ############### -->
    <equality>
    <!-- TBD -->
    </equality>

    <visual>
    <!-- TBD -->
    </visual>

    <asset>
        <!-- https://unsplash.com/photos/black-textile-on-brown-wooden-table-BUDn0s7QteI -->
        <texture name="concrete_floor" file="../components/texture/the-creativv-BUDn0s7QteI-unsplash.png" type="2d"/>
        <material name="floor" texture="concrete_floor" reflectance="0.05"/>
        <!-- https://www.deviantart.com/ebonykate/art/Free-textures-23-85711516 -->
        <texture name="blue_sponge" file="../components/texture/blue_sponge.png" type="2d"/>
        <material name="blue_sponge" texture="blue_sponge" reflectance="0.05"/>
    </asset>

    <worldbody>
        <!-- GND -->
        <light directional="true" cutoff="60" exponent="1" diffuse="1 1 1" specular=".1 .1 .1" pos=".1 .2 1.3" dir="-.1 -.2 -1.3"/>
        <geom name="ground" type="plane" pos="0 0 0" size="24 24 1" conaffinity="1" contype="1" material="floor" friction="0.0001 0.001 0.001" group="1"/>

        <!-- Robot -->
        <body name="waterloo_steel" pos="0.8 0 0" euler="0 0 -1.57079632679">
            <include file="../components/include_summit_wam_bhand_Chain.xml"/>
        </body>
        
        <!-- Cart -->
        <body name="wagon" pos="-2.03 0.494 0.2" euler="0 0 0" >
            <include file="../components/include_nonholonomic_cart_Chain.xml"/>
        </body>

        <!-- Environment -->
        <body name="environment" pos="0 -2 0" euler="0 0 0">
            <include file="../components/include_shelves.xml"/>
            <include file="../components/include_walls.xml"/>
        </body>
        <!-- <body name="flexible_box" pos="0 0 1">
            <freejoint/>
            <composite type="box" count="7 7 7" spacing="0.04">
                <skin texcoord="true" material="blue_sponge" rgba=".7 .7 .7 1"/>
                <geom type="capsule" size=".015 0.02" contype="1" conaffinity="1" group="0" rgba=".8 .2 .1 1"/>
            </composite>
        </body>
        <body name="rigid_sphere" pos="0 0 2">
            <freejoint/>
            <geom name="sphere/col" type="sphere" size=".2" contype="1" conaffinity="1" group="0" rgba=".8 .2 .2 1"/>
            <geom name="sphere/viz" type="sphere" size=".2" contype="0" conaffinity="0" group="1" rgba=".2 .2 .2 1"/>
        </body> -->
        <!-- Add a horizontal  -->
        <body name="hor_bar" pos="0 0 0.6" quat="0.7071068 -0.7071068 0 0">
            <geom name="cylinder_0/viz" type="cylinder" size="0.03 0.4" contype="0" conaffinity="0" group="1" rgba="0.3 0.3 0.3 1"/>
            <geom name="cylinder_0/col" type="cylinder" size="0.03 0.4" contype="1" conaffinity="1" group="0" rgba="0.3 0.3 0.3 1"/>
        </body>
        <!-- Add two vertical bars at either end -->
        <!-- Left -->
        <body name="vert_bar_left" pos="0 -0.4 0.3" quat="1 0 0 0">
            <geom name="cylinder_left/viz" type="cylinder" size="0.03 0.3" contype="0" conaffinity="0" group="1" rgba="0.3 0.3 0.3 1"/>
            <geom name="cylinder_left/col" type="cylinder" size="0.03 0.3" contype="1" conaffinity="1" group="0" rgba="0.3 0.3 0.3 1"/>
        </body>
        <!-- Right -->
        <body name="vert_bar_right" pos="0 0.4 0.3" quat="1 0 0 0">
            <geom name="cylinder_right/viz" type="cylinder" size="0.03 0.3" contype="0" conaffinity="0" group="1" rgba="0.3 0.3 0.3 1"/>
            <geom name="cylinder_right/col" type="cylinder" size="0.03 0.3" contype="1" conaffinity="1" group="0" rgba="0.3 0.3 0.3 1"/>
        </body>
    </worldbody>

    <!-- Defining a sensor -->
    <!-- https://github.com/google-deepmind/mujoco/issues/353#issuecomment-1162445382 -->
    <!-- Naming sensors -->
    <!-- https://github.com/openai/mujoco-py/issues/26#issuecomment-273637008 -->
    <sensor>
        <!-- Inserted at the wrist: force and torque sensor -->
        <force name="force_sensor" site="force_torque_sensor"/>
        <torque name="torque_sensor" site="force_torque_sensor"/>
    </sensor>
    <!-- Palm and horizontal-bar pairs -->
    <contact>
        <pair geom1="cylinder_0/col" geom2="bhand_palm_link_p1/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_palm_link_p2/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_palm_link_p3/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_palm_link_p4/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_1_prox_link_p1/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_1_prox_link_p2/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_1_prox_link_p3/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_1_med_link_p0/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_1_dist_link_p0/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_2_prox_link_p1/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_2_prox_link_p2/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_2_prox_link_p3/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_2_med_link_p0/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_2_dist_link_p0/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_3_med_link_p0/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
        <pair geom1="cylinder_0/col" geom2="bhand_finger_3_dist_link_p0/col" condim="3" solref="0.01 1" solimp=".95 .99 .0001"/>
    </contact>
    
</mujoco>
